@model MVC.Models.Views.AddSociety


<div class="section-form-add">
    @using (Html.BeginForm("Create", "Society", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Nouvelle Société</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.SocietyName, new { htmlAttributes = new { @class = "form-control col-12", @placeholder = "Société" } })
                        @Html.LabelFor(model => model.addSociety.SocietyName)
                        @Html.ValidationMessageFor(model => model.addSociety.SocietyName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.WebSite, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="WebSite" } })
                        @Html.LabelFor(model => model.addSociety.WebSite)
                        @Html.ValidationMessageFor(model => model.addSociety.WebSite, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.SocietyDesc, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="Description" } })
                        @Html.LabelFor(model => model.addSociety.SocietyDesc)
                        @Html.ValidationMessageFor(model => model.addSociety.SocietyDesc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.SocietyTinyDesc, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="Description(courte)" } })
                        @Html.LabelFor(model => model.addSociety.SocietyTinyDesc)
                        @Html.ValidationMessageFor(model => model.addSociety.SocietyTinyDesc, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.Img, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="Image" } })
                        @Html.LabelFor(model => model.addSociety.Img)
                        @Html.ValidationMessageFor(model => model.addSociety.Img, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.Phone, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="Téléphone" } })
                        @Html.LabelFor(model => model.addSociety.Phone)
                        @Html.ValidationMessageFor(model => model.addSociety.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.Street, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="Rue" } })
                        @Html.LabelFor(model => model.addSociety.Street)
                        @Html.ValidationMessageFor(model => model.addSociety.Street, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.addSociety.Number, new { htmlAttributes = new { @class = "form-control col-12", @placeholder ="Numéro" } })
                        @Html.LabelFor(model => model.addSociety.Number)
                        @Html.ValidationMessageFor(model => model.addSociety.Number, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.DropDownListFor(model => model.addSociety.LLoc.Id, new SelectList(Model.Localities, "Id", "LocalityName"), "Choisir une Localité", new { @class = "form-control col-12" })
                        @Html.ValidationMessageFor(model => model.Localities, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.DropDownListFor(model => model.addSociety.Boss.Id, new SelectList(Model.Utilisateurs, "Id", "LastName"), "Choisir un Boss", new { @class = "form-control col-12" })
                        @Html.ValidationMessageFor(model => model.addSociety.Boss.Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="clearfix">
                <div class="float-right">
                    <input type="submit" value="Create" class="btn btn-success btn-block" />
                </div>
            </div>
        </div>
    }
</div>

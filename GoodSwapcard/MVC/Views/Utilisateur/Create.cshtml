            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Tel" } })
                        @Html.LabelFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.Birthdate, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Date" } })
                        @Html.LabelFor(model => model.Birthdate)
                        @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row float-right">
                <input type="submit" value="Create" class="btn btn-success m-1" />
                <input type="reset" value="Cancel" class="btn btn-danger m-1" />
            </div>
        </div>

    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

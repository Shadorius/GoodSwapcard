@{
    ViewBag.Title = "Details";
}
@using MVC.Models


<h2>@ViewBag.EventName</h2>
<br />
<section>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#EventDetail" role="tab" aria-controls="home" aria-selected="true">Détails</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="home-tab" data-toggle="tab" href="#AllPart" role="tab" aria-controls="home" aria-selected="true">Les participants</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#AllEnterprises" role="tab" aria-controls="profile" aria-selected="false">Les entreprises</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="EventDetail" role="tabpanel" aria-labelledby="AllPart-tab">
            @Html.Action("PartialDetail", "Evenement", new { id = ViewBag.idEvent })
        </div>
        <div class="tab-pane fade show" id="AllPart" role="tabpanel" aria-labelledby="AllPart-tab">
            <div class="cards-columns">
                @Html.Action("ListUser", "Evenement", new { id = ViewBag.idEvent })
            </div>
        </div>
        <div class="tab-pane fade" id="AllEnterprises" role="tabpanel" aria-labelledby="AllEnterprises-tab">
            <div class="cards-columns">
                @Html.Action("ListSociety", "Evenement", new { id = ViewBag.idEvent })
            </div>
        </div>
    </div>
</section>

<div id="myModalSociety" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalSocietyContent'></div>
        </div>
    </div>
</div>

<div id="myModalUser" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalUserContent'></div>
        </div>
    </div>
</div>